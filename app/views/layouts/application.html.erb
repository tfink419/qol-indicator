<!DOCTYPE html>
<html>
  <head>
    <title>PitaMap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_tag "var FLASH_NOTICE = #{JSON.generate(flash[:notice])};" unless flash[:notice].blank? %>
    <%= javascript_tag "var FLASH_ERROR = #{JSON.generate(flash[:error])};" unless flash[:error].blank? %>
    
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div id="root">
      <%= yield %>
    </div>
  </body>
</html>

