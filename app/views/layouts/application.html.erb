<!DOCTYPE html>
<html>
  <head>
    <title>myQOLi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_tag "var FLASH_NOTICE = '#{flash[:notice]}';" unless flash[:notice].blank? %>
    <%= javascript_tag "var FLASH_ERROR = '#{flash[:error]}';" unless flash[:error].blank? %>
    <%= javascript_tag "var USER_USERNAME = '#{session[:username]}';" unless session[:username].blank? %>
    <%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';" if protect_against_forgery? %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'  %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div id="root">
      <%= yield %>
    </div>
  </body>
</html>

